package com.cicd.exampractice.entity;

import jakarta.persistence.*;

@Entity
@Table(name = "participant_table")
public class Participant {

    @Id
    @GeneratedValue(strategy = GenerationType.IDENTITY)
    @Column(name = "participant_id")
    private int id;

    @Column(name = "participant_name", nullable = false, length = 50)
    private String name;

    @Column(name = "participant_gender", nullable = false, length = 10)
    private String gender; // MALE or FEMALE

    @Column(name = "participant_email", nullable = false, unique = true, length = 50)
    private String email;

    @Column(name = "participant_contact", nullable = false, unique = true, length = 20)
    private String contact;

    @Column(name = "participant_event", nullable = false, length = 50)
    private String eventName; // Event they are participating in

    @Column(name = "participant_role", nullable = false, length = 30)
    private String role; // Attendee, Speaker, Judge, etc.

    @Column(name = "participant_organization", length = 50)
    private String organization;

    // Getters and Setters
    public int getId() { return id; }
    public void setId(int id) { this.id = id; }

    public String getName() { return name; }
    public void setName(String name) { this.name = name; }

    public String getGender() { return gender; }
    public void setGender(String gender) { this.gender = gender; }

    public String getEmail() { return email; }
    public void setEmail(String email) { this.email = email; }

    public String getContact() { return contact; }
    public void setContact(String contact) { this.contact = contact; }

    public String getEventName() { return eventName; }
    public void setEventName(String eventName) { this.eventName = eventName; }

    public String getRole() { return role; }
    public void setRole(String role) { this.role = role; }

    public String getOrganization() { return organization; }
    public void setOrganization(String organization) { this.organization = organization; }

    @Override
    public String toString() {
        return "Participant [id=" + id + ", name=" + name + ", gender=" + gender + ", email=" + email
                + ", contact=" + contact + ", eventName=" + eventName + ", role=" + role
                + ", organization=" + organization + "]";
    }
}
